@page
@using TopDoket.Core.Convertors
@model TopDoket.Web.Pages.Admin.Users.ListDeleteUsersModel
@{
    ViewData["Title"] = "ListDeleteUsers";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست کاربران</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست کاربران سایت
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="row">
                            <form>
                                <div class="col-sm-5 col-md-5">
                                    <input type="text" name="filterUserName" class="form-control" placeholder="نام کاربری" />
                                </div>
                                <div class="col-sm-5 col-md-5">
                                    <input type="text" name="filterEmail" class="form-control" placeholder="ایمیل" />
                                </div>
                                <div class="col-sm-2 col-md-2">
                                    <button type="submit" class="btn btn-info">بگرد</button>
                                    <a class="btn btn-default btn-sm" href="/Admin/Users">خالی</a>
                                </div>
                            </form>
                        </div>
                        <div class="col-md-12" style="margin: 10px 0;">

                            <a asp-page="CreateUser" class="btn btn-outline btn-success">افزودن کاربر جدید</a>

                        </div>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>نام کاربری</th>
                                    <th>ایمیل</th>
                                    <th>وضعیت</th>
                                    <th>تاریخ ثبت نام</th>
                                    @*<th>دستورات</th>*@
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model.UserForAdminViewModel.Users)
                                {
                                    <tr>
                                        <td>@user.UserName</td>
                                        <td>@user.Email</td>
                                        <td>
                                            @if (!user.IsActive)
                                            {
                                                <p class="text-success">فعال</p>
                                            }
                                            else
                                            {
                                                <p class="text-danger">غیر فعال</p>
                                            }
                                        </td>
                                        <td>@user.RegisterDate.ToShamsi()</td>
                                        <!--<td>-->
                                            @*<button class="btn btn-info" href="/Admin/Users/ActivateUser/@user.UserId">فعال کردن کاربر  </button>*@     
                                            @*<a href="/Admin/Users/ActivateUser/@user.UserId" class="btn btn-warning btn-sm">
                                                فعال کردن
                                            </a>*@
                                        <!--</td>-->
                                    </tr>
                                }
                            </tbody>
                        </table><div class="row">
                            <div class="col-sm-6">
                                <div class="dataTables_paginate paging_simple_numbers" id="dataTables-example_paginate">
                                    <ul class="pagination">

                                        @for (int i = 1; i <= Model.UserForAdminViewModel.PageCount; i++)
                                        {
                                            <li class="paginate_button @((i==Model.UserForAdminViewModel.CurrentPage)?"active":"")" aria-controls="dataTables-example" tabindex="0">
                                                <a href="/Admin/Users?PageId=@i">@i</a>
                                            </li>
                                        }

                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>