@page "{id}"
@using TopDoket.Core.Convertors
@model TopDoket.Web.Pages.Admin.Discount.EditDiscountModel
@{
    ViewData["Title"] = "EditDiscount";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">ویرایش کد </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form method="post" enctype="multipart/form-data">

        <input type="hidden" asp-for="Discount.DiscountId" />

        <div class="form-group">
            <label>کد تخفیف </label>
            <input type="text" asp-for="Discount.DiscountCode" class="form-control">
        </div>
        <div class="form-group">
            <label>درصد کد تخفیف </label>
            <input type="number" asp-for="Discount.DiscountPercent" class="form-control">
        </div>
        <div class="form-group">
            <label>تعداد </label>
            <input type="number" asp-for="Discount.UsableCount" class="form-control">
        </div>
        <div class="form-group">
            <label>تاریخ شروع </label>
            <input id="stDate" name="stDate" value="@((Model.Discount.StartDate!=null)?Model.Discount.StartDate.Value.ToShamsi():"")" />
        </div>
        <div class="form-group">
            <label>تاریخ پایان </label>
            <input id="edDate" name="edDate" value="@((Model.Discount.EndDate!=null)?Model.Discount.EndDate.Value.ToShamsi():"")" />
        </div>
        <input type="submit" value="ذخیره اطلاعات" class="btn btn-success" />

    </form>
</div>

@section Scripts
{
    <link href="http://cdn.kendostatic.com/2013.2.918/styles/kendo.common.min.css" rel="stylesheet" />
    <link href="http://cdn.kendostatic.com/2013.2.918/styles/kendo.default.min.css" rel="stylesheet" />

    <script src="/js/kendo.all.min.js"></script>
    <script>
        // create DatePicker from input HTML element
        $("#stDate").kendoDatePicker();
        $("#edDate").kendoDatePicker();
    </script>


}
